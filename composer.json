{
    "name": "heddn/php-signify-composer-integration",
    "description": "Composer 2.x+ integration to leverage PHP Signify",
    "keywords": ["drupal", "automatic updates"],
    "type": "composer-plugin",
    "autoload": {
        "psr-4": {
            "Drupal\\Composer\\Plugin\\AutomaticUpdates\\": "."
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Composer\\Plugin\\AutomaticUpdates\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "class": "Drupal\\Composer\\Plugin\\AutomaticUpdates\\Verify"
    },
    "require": {
        "php": "^7.3",
        "composer-plugin-api": "^2@dev",
        "drupal/php-signify": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^2@dev",
        "phpmd/phpmd": "^2.8",
        "phpspec/prophecy-phpunit": "^1.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "license": "GPL-2.0-or-later",
    "config": {
        "sort-packages": true
    },
    "prefer-stable":  true,
    "minimum-stability": "dev"
}
